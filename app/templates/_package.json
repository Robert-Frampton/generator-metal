{
	"name": "<%= repoName %>",
	"version": "0.0.0",
	"description": "<%= repoDescription %>",
	"license": "BSD",
	"repository": "<%= repoOwner %>/<%= repoName %>",
	"engines": {
		"node": ">=0.12.0",
		"npm": ">=3.0.0"
	},
	"main": "lib/<%= componentName %>.js",
	"jsnext:main": "src/<%= componentName %>.js",
	"files": [
		"lib",
		"src",
		"test"
	],
	"scripts": {
		<% if (templateLanguage === 'Soy') { %>
		"build": "npm run soy && webpack",<% } else { %>
		"build": "webpack",<% } %>
		"compile": "babel --presets metal -d lib/ src/",
		"postinstall": "npm run build",<% if (templateLanguage === 'Soy') { %>
		"prepublish": "gulp soy && npm run compile",<% } else { %>
		"prepublish": "npm run compile",<% } %><% if (templateLanguage === 'Soy') { %>
		"soy": "metalsoy --soyDeps node_modules/metal*/src/**/*.soy node_modules/clay*/src/**/*.soy",<% } %>
		"start": "http-server . -p 4000",
		"test": "npm run soy && jest",
		"watch": "gulp build:watch"
	},
	"keywords": [
		"metal"
	],
	"babel": {
		"presets": ["metal"<% if (templateLanguage === 'JSX') { %>, "metal-jsx"<% } %>]
	},<% if (superClass === 'State') { %>
	"dependencies": {
		"metal-state": "^2.0.0"
	},<% } else if (superClass === 'Component') { %>
	"dependencies": {
		"bootstrap": "^3.3.6"<% if (templateLanguage === 'Soy') { %>,
		"metal-soy": "^2.0.0"<% } else if (templateLanguage === 'JSX') { %>,
		"metal-jsx": "^2.0.0"<% } else { %>,
		"metal-component": "^2.0.0"<% } %>
	},<% } else { %>
	"dependencies": {
		"metal": "^2.0.0"
	},<% } %>
	"devDependencies": {
		"babel-cli": "^6.4.5",
		"babel-core": "^6.25.0",
		"babel-loader": "^7.0.0",
		"babel-plugin-transform-node-env-inline": "^0.1.1",
		"babel-preset-metal": "^4.0.0",
		<% if (templateLanguage === 'JSX') { %>
		"babel-preset-metal-jsx": "^0.0.2",<% } %><% if (!defaultKarmaConfig) { %>
		"chai": "^2.3.0",<% } %><% if (superClass === 'Component') { %>
		"css-loader": "^0.28.4"<% } %>,
		"gulp": "^3.8.11",
		"gulp-metal": "^1.0.0",
		"http-server": "^0.9.0"<% if (superClass === 'Component') { %>,
		"identity-obj-proxy": "^3.0.0"<% } %><% if (!defaultKarmaConfig) { %>,
		"isparta": "^4.0.0",<% } %>
		"jest": "^20.0.4",<% if (buildFormat === 'jquery') { %>
		"jquery": "^2.2.0",<% } %>
		"metal-lerna-jest-resolver": "^1.0.0",
		"metal-jest-serializer": "^1.0.1",<% if (buildFormat === 'jquery') { %>
		"metal-jquery-adapter": "^2.0.0",<% } %><% if (!defaultKarmaConfig) { %>
		"karma": "^0.13.9",
		"karma-babel-preprocessor": "^6.0.1",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^0.2.0",
		"karma-commonjs": "0.0.13",
		"karma-coverage": "^0.5.1",
		"karma-mocha": "^0.2.0",
		"karma-source-map-support": "1.0.0",
		"mocha": "^2.2.5"<% } %><% if (templateLanguage === 'Soy') { %>,
		"metal-tools-soy": "^4.2.1"<% } %><% if (superClass === 'Component') { %>,
		"node-sass": "^4.5.3",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.18.2"<% } %><% if (buildFormat === 'amd') { %>,
		"requirejs": "^2.1.0"<% } %>,
		"webpack": "^3.0.0"
	},
	"jest": {
		"resolver": "metal-lerna-jest-resolver",
		"snapshotSerializers": [
			"metal-jest-serializer"
		],
		"moduleNameMapper": {
			"^.+\\.scss$": "identity-obj-proxy"
		}
	}
}
