{
	"name": "<%= repoName %>",
	"version": "0.0.0",
	"description": "<%= repoDescription %>",
	"license": "BSD",
	"repository": "<%= repoOwner %>/<%= repoName %>",
	"engines": {
		"node": ">=0.12.0",
		"npm": ">=3.0.0"
	},<% if (isNodeModule) { %>
	"main": "lib/<%= capitalizeName %>.js",
	"browser": "src/<%= capitalizeName %>.js",<% } else { %>
	"main": "src/<%= capitalizeName %>.js",<% } %>
	"files": [<% if (isNodeModule) { %>
		"lib",<% } %>
		"src",
		"test"
	],
	"scripts": {
		"build": "gulp build",<% if (isNodeModule) { %>
		"compile": "babel --presets es2015 -d lib/ src/",
		"publish": "npm run compile",<% } %>
		"test": "gulp test",
		"watch": "gulp build:watch"
	},
	"keywords": [
		"metal"
	],<% if (templateLanguage === 'JSX') { %>
	"babel": {
		"presets": ["metal-jsx"]
	},<% } %><% if (superClass === 'State') { %>
	"dependencies": {
		"metal-state": "^1.0.0-rc.3"
	},<% } else if (superClass === 'Component') { %>
	"dependencies": {
    "bootstrap": "^3.3.6"<% if (templateLanguage === 'Soy') { %>,
		"metal-soy": "^1.0.0-rc.11"<% } else if (templateLanguage === 'JSX') { %>,
		"metal-jsx": "^1.0.0-rc.9"<% } else { %>,
		"metal-component": "^1.0.0-rc.11"<% } %>
	},<% } else { %>
	"dependencies": {
		"metal": "^1.0.0-rc.2"
	},<% } %>
	"devDependencies": {<% if (templateLanguage === 'JSX') { %>
		"babel-preset-metal-jsx": "^0.0.2",<% } %><% if (isNodeModule) { %>
		"babel-cli": "^6.4.5",
		"babel-preset-es2015": "^6.3.13",<% } %><% if (!defaultKarmaConfig) { %>
		"babel-preset-metal": "^3.0.0",
		"chai": "^2.3.0",<% } %>
		"gulp": "^3.8.11",
		"gulp-metal": "^1.0.0"<% if (!defaultKarmaConfig) { %>,
		"isparta": "^4.0.0"<% } %><% if (buildFormat === 'jquery') { %>,
		"jquery": "^2.2.0"<% } %><% if (!defaultKarmaConfig) { %>,
		"karma": "^0.13.9",
		"karma-babel-preprocessor": "^6.0.1",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^0.2.0",
		"karma-commonjs": "0.0.13",
		"karma-coverage": "^0.5.1",
		"karma-mocha": "^0.2.0",
		"karma-source-map-support": "1.0.0",
		"mocha": "^2.2.5"<% } %><% if (buildFormat === 'amd') { %>,
		"requirejs": "^2.1.0"<% } %>
	}
}
