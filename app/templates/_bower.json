{
	"name": "<%= repoName %>",
	"version": "0.0.0",
	"description": "<%= repoDescription %>",
	"main": "src/<%= capitalizeName %>.js",
	"moduleType": [
		"es6"
	],
	"keywords": [
		"metal",
		"<%= namespace %>"
	],
	"ignore": [
		"*",
		"!src/**/*",
		"!test/**/*"
	],
	"dependencies": {
		"bootstrap": "~3.3.4",<% if (buildFormat === 'amd') { %>
		"requirejs": "~2.1.18",<% } %><% if (buildFormat === 'jquery') { %>
		"jquery": "~2.1.4",<% } %>
		"metal": "metal/metal.js#master",
		"metal-jquery-adapter": "metal/metal-jquery-adapter#master"
	}
}
